{
  "buildCommand": "npm ci && npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://findgreatstocks-production.up.railway.app/api/$1"
    },
    {
      "source": "/(.*)",
      "has": [
        { "type": "header", "key": "accept", "value": "text/html" }
      ],
      "destination": "/index.html"
    }
  ]
}