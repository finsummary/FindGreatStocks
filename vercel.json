{
  "buildCommand": "cd client-app && npm install && npm run build",
  "outputDirectory": "client-app/dist",
  "devCommand": "cd client-app && npm run dev",
  "installCommand": "cd client-app && npm install",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://your-railway-app.railway.app/api/$1"
    }
  ]
}
